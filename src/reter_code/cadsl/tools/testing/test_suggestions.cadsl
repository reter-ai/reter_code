            FILTER (!STRSTARTS(?name, "_"))
            FILTER (!REGEX(?file, "test"))
            FILTER NOT EXISTS {
                ?test calls ?m .
                ?test inFile ?test_file .
                FILTER (REGEX(?test_file, "test"))
